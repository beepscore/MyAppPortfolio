<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.15">
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.70">

        <TextView
            android:id="@+id/textView"
            android:text="@string/my_nanodegree_apps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/spotify_button"
            android:text="@string/spotify_streamer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView"
            android:layout_marginTop="@dimen/button_vertical_margin"
            android:onClick="spotifyTapped"/>

        <Button
            android:id="@+id/scores_button"
            android:text="@string/scores_app"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/spotify_button"
            android:layout_marginTop="@dimen/button_vertical_margin"
            android:onClick="scoresTapped"/>

        <Button
            android:id="@+id/library_button"
            android:text="@string/library_app"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scores_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/button_vertical_margin"
            android:onClick="libraryTapped"/>

        <Button
            android:id="@+id/build_it_bigger_button"
            android:text="@string/build_it_bigger"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/library_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/button_vertical_margin"
            android:onClick="buildItBiggerTapped"/>

        <Button
            android:id="@+id/xyz_reader_button"
            android:text="@string/xyz_reader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/build_it_bigger_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/button_vertical_margin"
            android:onClick="XYZReaderTapped"/>

        <Button
            android:id="@+id/my_own_app_button"
            android:text="@string/my_own_app"
            android:textColor="@color/button_text_light_color"
            android:background="@color/button_capstone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/xyz_reader_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/button_vertical_margin"
            android:onClick="myOwnAppTapped"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.15">
    </RelativeLayout>

</LinearLayout>
